<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">New blog post</div>
  <form class="ui form" action="/blog-posts" method="POST">
    <div class="field">
      <label for="">Title</label>
      <input type="text" name="blog[title]" placeholder="title">
    </div>
    <div class="field">
      <label for="">Image url</label>
      <input type="text" name="blog[image]" placeholder="image">
    </div>
    <div class="field">
      <label for="">Content</label>
      <textarea name="blog[body]" placeholder="main content goes here"></textarea>
    </div>
    <button class="ui grey big button">Publish</button>
  </form>
</div>

