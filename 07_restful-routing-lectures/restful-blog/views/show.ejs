<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header"><%= blogPost.title %></div>
  <div class="ui top attached">
    <div class="item">
        <img class="ui centered rounded image" src="<%= blogPost.image %>" alt="<%= blogPost.title %>">
        <div class="content">
          <span><%= blogPost.created.toDateString() %></span>
        </div>
        <div class="description">
          <p><%- blogPost.body %></p>
        </div>
        <a class="ui grey button" href="/blot-posts/<%= blogPost._id %>/edit">Edit post</a>
        <form id="deletePost" action="/blog-posts/<%= blogPost._id %>?_method=DELETE" method="POST">
          <button class="ui red button">Delete post</button>
        </form>
    </div>
  </div>
</div>

<% include partials/footer %>
